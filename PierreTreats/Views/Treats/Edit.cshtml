@{
  Layout="_Layout";
}

@model PierreTreats.Models.Treat

<h2>Edit</h2>

<h4>Edit this flavor tag: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavors", "Index")</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Add Treat to this Flavor", "AddTreat", new { id = Model.TreatId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>